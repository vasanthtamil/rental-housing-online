<div class="container">
    <header>Add Property</header>
    <div class="progress-bar">
        <div class="step">
            <p>
                Basic
            </p>
            <div class="bullet">
                <span>1</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Location
            </p>
            <div class="bullet">
                <span>2</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Upload
            </p>
            <div class="bullet">
                <span>3</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
        <div class="step">
            <p>
                Submit
            </p>
            <div class="bullet">
                <span>4</span>
            </div>
            <div class="check fas fa-check">
            </div>
        </div>
    </div>
    <div class="form-outer">
        <form action="#">
            <div class="page slide-page">
                <div class="title">
                    Basic Detail:
                </div>
                <div class="field">
                    <div class="label">
                        Property Condition:
                    </div>
                    <input type="text" placeholder="UnderConstruction/Ready To move" required>
                </div>
                <div class="field">
                    <div class="label">
                        Owner Name:
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        Mobile:
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        Total No Of Rooms:
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <button class="firstNext next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Location
                </div>
                <div class="field">
                    <div class="label">
                        Country
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        State/District
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        City
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        Permanent Address
                    </div>
                    <input type="text" required>
                </div>
                <div class="field btns">
                    <button class="prev-1 prev">Previous</button>
                    <button class="next-1 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Rent Details
                </div>
                <div class="field">
                    <div class="label">
                        House type
                    </div>
                    <select>
                        <option>1rk</option>
                        <option>1bhk</option>
                        <option>2bhk/1bath</option>
                        <option>2bhk/2bath</option>
                        <option>3bhk/1bath</option>
                        <option>3bhk/3bath</option>
                        <option>0.5bhk</option>
                        <option>1.5bhk</option>
                        <option>4bhk</option>
                    </select>
                </div>
                <div class="field">
                    <div class="label">
                        Monthly Payment:
                    </div>
                    <input type="text" placeholder="amount" required>
                </div>
                <div class="field">
                    <div class="label">
                        Security Deposit:
                    </div>
                    <input type="text" placeholder="Range of amount" required>
                </div>
                <div class="field">
                    <div class="label">
                        First Month Payment:
                    </div>
                    <input type="text" required>
                </div>
                <div class="field">
                    <div class="label">
                        Sq.ft
                    </div>
                    <input type="text">
                </div>
                <div class="field btns">
                    <button class="prev-2 prev">Previous</button>
                    <button class="next-2 next">Next</button>
                </div>
            </div>
            <div class="page">
                <div class="title">
                    Upload
                </div>
                <div class="field">
                    <div class="label">
                        Image
                    </div>
                    <input type="file" multiple style="padding-top:12px;" required>
                </div><br>
                <div class="field">
                    <div class="label">
                        Property Document
                    </div>
                    <input type="file" multiple style="padding-top:12px;"  required>
                </div>
                <div class="field btns">
                    <button class="prev-3 prev">Previous</button>
                    <button class="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>
